    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "firefox",
            "request": "attach"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5500",
            "pathMappings": [
                {
                    "url": "http://localhost",
                    "path": "${workspaceFolder}"
                },
                {
                    "url": "http://localhost/pages",
                    "path": "${workspaceFolder}/pages"
                },
                {
                    "url": "http://localhost/images",
                    "path": "${workspaceFolder}/images"
                },
                {
                    "url": "http://localhost/assets",
                    "path": "${workspaceFolder}/assets"
                }
            ]
        },
    ]
}